<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosaNevoa"
    tools:context=".ui.MainActivity">

    <!-- Toolbar no topo da tela -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/roxoProfundo"
        app:titleTextColor="@color/white"
        android:title="Main Activity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meus salões"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:textSize="30sp"
        android:id="@+id/titleMeusSaloes"/>

    <!-- RecyclerView logo abaixo da Toolbar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleMeusSaloes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <!-- Botão de Adicionar na parte inferior direita -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/rosa_medio"
        android:src="@drawable/baseline_add_24" />

</RelativeLayout>
