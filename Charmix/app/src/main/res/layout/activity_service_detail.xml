<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosaNevoa"
    android:orientation="vertical"
    tools:context=".ui.ServiceDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Detalhes de Serviço"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:hint="Nome"
        android:padding="15dp"
        android:background="@drawable/container_edit_text"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_cleaning_services_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/roxoProfundo"/>

    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:hint="Descricao"
        android:padding="15dp"
        android:background="@drawable/container_edit_text"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_description_24"
        android:drawableTint="@color/roxoProfundo"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/editPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:hint="Preço"
        android:padding="15dp"
        android:background="@drawable/container_edit_text"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_attach_money_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/roxoProfundo"/>

    <EditText
        android:id="@+id/editDuracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:hint="Duração em minutos: Ex: 15"
        android:maxLength="14"
        android:padding="15dp"
        android:background="@drawable/container_edit_text"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_access_time_24"
        android:drawableTint="@color/roxoProfundo"
        android:drawablePadding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:id="@+id/btnsInicial">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#6C757D"
            android:text="Voltar" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/roxoProfundo"
            android:text="Editar" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/deletar"
            android:text="Delete" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnsEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#6C757D"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/roxoProfundo"
            android:text="Salvar" />

    </LinearLayout>

</LinearLayout>