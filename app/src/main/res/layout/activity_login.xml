<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Logo da Charmix"
        android:src="@drawable/logo" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:gravity="center"
        android:text="Conecte-se"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="30dp"
        android:paddingEnd="25dp"
        android:paddingBottom="30dp">

        <!-- Campo CPF/CNPJ -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIdentificador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF ou CNPJ"
                android:textColor="#340053"
                android:drawableStart="@drawable/baseline_document_scanner_24"
                android:drawableTint="@color/roxoProfundo"
                android:drawablePadding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Senha -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawableTint="@color/roxoProfundo"
                android:drawablePadding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkbox "Manter conectado" -->
        <CheckBox
            android:id="@+id/checkboxConextado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manter conectado"
            android:textColor="@color/black" />

        <!-- Botão Entrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="ENTRAR"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="@null"
            app:backgroundTint="@null" />

        <!-- Link "Ainda não possui conta?" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ainda não possui conta?"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/irCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Clique aqui"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>