<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Layout Superior (Título + Ícone) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Título do Item -->
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="4dp"
            android:text="Item Title"
            android:textColor="@color/roxoProfundo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ícone de Expansão -->
        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Ícone de expansão"
            android:src="@drawable/baseline_expand_more_24"
            app:tint="@color/roxoProfundo" />
    </LinearLayout>

    <!-- Detalhes Ocultos (Expandíveis) -->
    <LinearLayout
        android:id="@+id/agendaDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <!-- Cliente -->
        <TextView
            android:id="@+id/agendaCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="Cliente: "
            android:textColor="@color/cinzaEscuro"
            android:textSize="16sp" />

        <!-- Serviço -->
        <TextView
            android:id="@+id/agendaServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="Serviço: "
            android:textColor="@color/cinzaEscuro"
            android:textSize="16sp" />

        <!-- Data e Horário -->
        <TextView
            android:id="@+id/agendaDataHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="Data e Horário: "
            android:textColor="@color/cinzaEscuro"
            android:textSize="16sp" />

        <!-- Observação -->
        <TextView
            android:id="@+id/agendaObservacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="Observação: "
            android:textColor="@color/cinzaEscuro"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>