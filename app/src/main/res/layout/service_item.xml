<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Serviço -->
        <TextView
            android:id="@+id/textNomeServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="Nome do Serviço"
            android:textColor="@color/roxoProfundo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/cinzaClaro" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="4dp"
            android:text="Descrição do serviço"
            android:textColor="@color/cinzaEscuro"
            android:textSize="14sp" />

        <!-- Preço -->
        <TextView
            android:id="@+id/textPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="4dp"
            android:text="R$ 50,00"
            android:textColor="@color/cinzaEscuro"
            android:textSize="14sp" />

        <!-- Duração -->
        <TextView
            android:id="@+id/textDuracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:drawableTint="@color/roxoProfundo"
            android:paddingBottom="8dp"
            android:text="30 minutos"
            android:textColor="@color/cinzaEscuro"
            android:textSize="14sp" />

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/cinzaClaro" />



    </LinearLayout>

</androidx.cardview.widget.CardView>